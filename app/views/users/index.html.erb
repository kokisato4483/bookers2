

<div class="container">
  <div class="row">
    
    <div class= "col-md-3">
      <%= render 'books/book', user: @user, book: @book %>
    </div>

    <div class= "col-md-8 offset-md-1">
      
      <h2>Users</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
      
        <tbody>
          
          <% @users.each do |user| %>

          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name%></td>
            <td><%= link_to "Show", user_path(user.id)%></td>
            <td>
          </tr>
        </tbody>
          
<% end %> 
      </table>
    </div>  <!-- この行を追加 -->
  </div>    <!-- この行を追加 -->
</div>

   


