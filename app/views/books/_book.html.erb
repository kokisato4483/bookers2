<h2>User info</h2>

<table class="table">
  <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
    <td></td>
  </tr>
  <tr>
    <td>name</td>
    <td>introduction</td>
  </tr>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.introduction %></td>
  </tr>
</table>
   

<%= link_to edit_user_path(user.id),class:"btn btn-block btn-outline-secondary p-0 mt-3" do %>
  <i class="fas fa-user-cog"></i>
<% end %>
  
<h2>New book</h2>

<%= form_with model: book,local:true do |f| %>
  <div class="form-group">
    <h4 class="py-2">Title</h4>
    <%= f.text_field :title,class:"form-contorol" %>
  </div>
  
  <div class="form-group">
    <h4 class="py-2">Option</h4>
    <%= f.text_area :body,class:"form-control" %>
  </div>

<%= f.submit "Create Book",class:"btn btn-success" %>
   <% end %>
  