


<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <br><%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'book', user: @user, book: @book %>
    </div>
      
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class='table table-striped'>
        <thead>
        　<tr>
        　　　<th></th>
        　　　<th>Title</th>
        　　　<th>Opinion</th>
      　　　</tr>
        </thead>

        <tbody>
          
        <% @books.each do |books| %>

          <tr>
            <td><%= link_to user_path(books.user.id) do %>
              <nav><%= image_tag books.user.get_profile_image(100,100) %></nav>
              <% end %>
            </td>
            <td><%= link_to books.title, book_path(books.id) %></td>
            <td><%= books.body %></td>
          </tr>
        </tbody>
        <% end %>

      </table>
    </div>  <!-- この行を追加 -->
  </div>    <!-- この行を追加 -->
</div>
